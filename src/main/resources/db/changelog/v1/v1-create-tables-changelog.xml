<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Voropay Matvey">
        <createSequence incrementBy="50" sequenceName="projects_seq" startValue="1"/>
    </changeSet>
    <changeSet id="2" author="Voropay Matvey">
        <createSequence incrementBy="50" sequenceName="record_details_seq" startValue="1"/>
    </changeSet>
    <changeSet id="3" author="Voropay Matvey">
        <createSequence incrementBy="50" sequenceName="task_details_seq" startValue="1"/>
    </changeSet>
    <changeSet id="4" author="Voropay Matvey">
        <createSequence incrementBy="50" sequenceName="users_seq" startValue="1"/>
    </changeSet>
    <changeSet id="5" author="Voropay Matvey">
        <createTable tableName="projects">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_projects"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="Voropay Matvey">
        <createTable tableName="record_details">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_record_details"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="7" author="Voropay Matvey">
        <createTable tableName="record_task">
            <column name="record_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="task_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="8" author="Voropay Matvey">
        <createTable tableName="task_details">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_task_details"/>
            </column>
            <column name="project_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="9" author="Voropay Matvey">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="10" author="Voropay Matvey">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="11" author="Voropay Matvey">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="12" author="Voropay Matvey">
        <addForeignKeyConstraint baseColumnNames="project_id" baseTableName="record_details"
                                 constraintName="FK_RECORD_DETAILS_ON_PROJECT" referencedColumnNames="id"
                                 referencedTableName="projects"/>
    </changeSet>
    <changeSet id="13" author="Voropay Matvey">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="record_details"
                                 constraintName="FK_RECORD_DETAILS_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="14" author="Voropay Matvey">
        <addForeignKeyConstraint baseColumnNames="project_id" baseTableName="task_details"
                                 constraintName="FK_TASK_DETAILS_ON_PROJECT" referencedColumnNames="id"
                                 referencedTableName="projects"/>
    </changeSet>
    <changeSet id="15" author="Voropay Matvey">
        <addForeignKeyConstraint baseColumnNames="record_id" baseTableName="record_task"
                                 constraintName="fk_rectas_on_record_detail" referencedColumnNames="id"
                                 referencedTableName="record_details"/>
    </changeSet>
    <changeSet id="16" author="Voropay Matvey">
        <addForeignKeyConstraint baseColumnNames="task_id" baseTableName="record_task"
                                 constraintName="fk_rectas_on_task_detail" referencedColumnNames="id"
                                 referencedTableName="task_details"/>
    </changeSet>

</databaseChangeLog>